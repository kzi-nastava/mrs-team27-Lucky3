<?xml version="1.0" encoding="utf-8"?>
<!-- Admin support conversations list screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.support.AdminSupportListFragment">

    <!-- Navbar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Title row -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Conversations"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Loading state -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:indeterminateTint="@color/yellow_500"
            android:visibility="gone" />

        <!-- Error state -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_500"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No conversations"
                android:textColor="@color/gray_400"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support conversations will appear here"
                android:textColor="@color/gray_600"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Conversation list -->
        <ListView
            android:id="@+id/lv_chats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>

</LinearLayout>
