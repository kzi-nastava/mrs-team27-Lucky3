<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: Earnings & History + Time Filters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Earnings &amp; History"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_container"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/filter_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="@color/gray_400"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/filter_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_filter_selected"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/filter_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@color/gray_400"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/filter_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="@color/gray_400"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Stats Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Total Earnings -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/gray_400"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Earnings"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/total_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="121 RSD"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- Total Rides -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/gray_400"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Rides"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/total_rides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/avg_per_ride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg 24 RSD/ride"
                        android:textColor="@color/gray_400"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Average Rating -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/star_on"
                            app:tint="@color/yellow_500"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average Rating"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/avg_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.90"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1198 ratings"
                        android:textColor="@color/gray_400"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/gray_400"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/total_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29.8km"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/avg_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg 6.0km/ride"
                        android:textColor="@color/gray_400"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </GridLayout>

            <!-- Ride History Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride History"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <!-- Date Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btn_from_date"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:hint="Start date"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btn_to_date"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:hint="End date"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_card" />

                <ImageView
                    android:id="@+id/btn_clear_dates"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="@color/gray_400"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Sort Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinner_sort"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:popupBackground="@color/gray_800"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_sort_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="â†“ DESC"
                    android:textColor="@color/yellow_500"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_card"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Status Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinner_status"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:popupBackground="@color/gray_800"
                    android:paddingHorizontal="8dp" />
            </LinearLayout>

            <!-- Ride History List -->
            <ListView
                android:id="@+id/ride_history_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="4dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

