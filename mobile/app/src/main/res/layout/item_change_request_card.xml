<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#1F2937"
    app:strokeColor="#374151"
    app:strokeWidth="1dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#064E3B"
                app:strokeColor="#059669"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:textColor="#A7F3D0"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#7F1D1D"
                app:strokeColor="#DC2626"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:textColor="#FCA5A5"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

        <!-- Driver Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="New Image:"
                android:textColor="#9CA3AF"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_driver_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Driver Information Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6">

            <!-- Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="New Name:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Surname -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="New Surname:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_surname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Email -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="New Email:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Phone -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="New Phone:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Address -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="New Address:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />
        </GridLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#374151"
            android:layout_marginVertical="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Information"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Vehicle Information Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6">

            <!-- Baby Transport -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="Baby Transport:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_baby_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Pet Transport -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="Pet Transport:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_pet_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Vehicle Type -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="Vehicle Type:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_vehicle_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Passenger Seats -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="Passenger Seats:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_passenger_seats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- License Number -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="License Number:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_license_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <!-- Model -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.4"
                android:text="Model:"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tv_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.6"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingVertical="6dp" />
        </GridLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
