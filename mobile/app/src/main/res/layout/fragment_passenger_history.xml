<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Navbar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride History"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Shake hint -->
            <TextView
                android:id="@+id/tv_shake_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Shake to toggle sort order"
                android:textColor="@color/gray_400"
                android:textSize="11sp"
                android:layout_marginBottom="14dp" />

            <!-- Status Filter Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_filter_all"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="All"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_selected"
                        android:paddingHorizontal="16dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/btn_filter_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="In Progress"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_unselected"
                        android:paddingHorizontal="14dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/btn_filter_accepted"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Accepted"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_unselected"
                        android:paddingHorizontal="14dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/btn_filter_finished"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Finished"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_unselected"
                        android:paddingHorizontal="14dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/btn_filter_rejected"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Rejected"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_unselected"
                        android:paddingHorizontal="14dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/btn_filter_cancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Cancelled"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/bg_filter_unselected"
                        android:paddingHorizontal="14dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Date Filters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btn_from_date"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:hint="Start date"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btn_to_date"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:hint="End date"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_card" />

                <TextView
                    android:id="@+id/btn_clear_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="CLEAR"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_card"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <!-- Sort Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by:"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinner_sort"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:popupBackground="@color/gray_800"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_sort_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="â†“ DESC"
                    android:textColor="@color/yellow_500"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_card"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Ride Count -->
            <TextView
                android:id="@+id/tv_ride_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_300"
                android:textSize="12sp"
                android:background="@drawable/bg_badge_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:layout_marginBottom="10dp" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/yellow_500" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No rides found"
                android:textColor="@color/gray_400"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- Rides List -->
            <ListView
                android:id="@+id/rides_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:nestedScrollingEnabled="true" />

            <!-- Load More Button -->
            <TextView
                android:id="@+id/btn_load_more"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Load More"
                android:textColor="@color/yellow_500"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
