<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.passenger.PassengerHistoryFragment">

    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Filter Buttons -->
    <HorizontalScrollView
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="8dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/navbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textColor="#000000"
                android:backgroundTint="#FFC107"
                app:cornerRadius="18dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_pending"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Pending"
                android:textColor="#666666"
                android:backgroundTint="#E0E0E0"
                app:cornerRadius="18dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_finished"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Finished"
                android:textColor="#666666"
                android:backgroundTint="#E0E0E0"
                app:cornerRadius="18dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_rejected"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Rejected"
                android:textColor="#666666"
                android:backgroundTint="#E0E0E0"
                app:cornerRadius="18dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_canceled"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Canceled"
                android:textColor="#666666"
                android:backgroundTint="#E0E0E0"
                app:cornerRadius="18dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for Rides -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_rides"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/filter_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_ride_history"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No rides found"
            android:textSize="18sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#FFC107"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
