<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/gray_900"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Row 1: Status badge + Date + Panic indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FINISHED"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/green_500"
                android:background="@drawable/bg_badge_green"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp" />

            <TextView
                android:id="@+id/tv_panic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš  PANIC"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:background="@drawable/bg_badge_cancelled"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:layout_marginStart="6dp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 8, 2026"
                android:textSize="11sp"
                android:textColor="@color/gray_400" />
        </LinearLayout>

        <!-- Row 2: Route (departure -> destination) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Route dots -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="10dp">

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_dot_green" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/gray_700" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_dot_red" />
            </LinearLayout>

            <!-- Addresses -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_departure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pickup"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Start/End Times -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start: 10:00 AM"
                android:textSize="11sp"
                android:textColor="@color/gray_400" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End: 10:30 AM"
                android:textSize="11sp"
                android:textColor="@color/gray_400"
                android:gravity="end" />
        </LinearLayout>

        <!-- Row 4: Cost + Cancelled By -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450 RSD"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/yellow_500" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_cancelled_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled by Driver"
                android:textSize="11sp"
                android:textColor="@color/red_500"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
