<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_900">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Driver Info"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Personal Information Section -->
        <TextView
            android:id="@+id/section_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/section_personal"/>

        <EditText
            android:id="@+id/input_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_name"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_surname"/>

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_email"/>

        <EditText
            android:id="@+id/input_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_phone"/>

        <!-- Vehicle Information Section -->
        <TextView
            android:id="@+id/section_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Information"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/input_address"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_vehicle_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Type"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/gray_400"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/gray_400"
            app:layout_constraintTop_toBottomOf="@id/section_vehicle">

            <AutoCompleteTextView
                android:id="@+id/spinner_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/input_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle model"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_vehicle_type"/>

        <EditText
            android:id="@+id/input_license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="License Plate"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_vehicle_model"/>

        <EditText
            android:id="@+id/input_passenger_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passenger Seats"
            android:inputType="number"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/input_license_plate"/>

        <!-- Vehicle Features Section -->
        <TextView
            android:id="@+id/section_features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Features"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/input_passenger_seats"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_baby_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baby Transport Available"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/section_features"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_pet_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Transport Available"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/switch_baby_transport"/>

        <EditText
            android:id="@+id/input_reason"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:hint="Reason fot change"
            style="@style/Style.App.AuthInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/switch_pet_transport"/>

        <!-- Submit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            style="@style/Style.App.AuthButton"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/input_reason"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
