<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/ride_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standard Ride"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ride_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5 km â€¢ 15 min"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ride_type" />

    <TextView
        android:id="@+id/ride_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 RSD"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Route Visualization -->
    <View
        android:id="@+id/route_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/gray_700"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="@id/pickup_dot"
        app:layout_constraintEnd_toEndOf="@id/pickup_dot"
        app:layout_constraintTop_toBottomOf="@id/pickup_dot"
        app:layout_constraintBottom_toTopOf="@id/dropoff_dot" />

    <!-- Pickup -->
    <ImageView
        android:id="@+id/pickup_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/bg_dot_yellow"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ride_info" />

    <TextView
        android:id="@+id/pickup_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123 Main St, New York"
        android:textColor="@color/gray_300"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/pickup_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pickup_dot"
        app:layout_constraintBottom_toBottomOf="@id/pickup_dot" />

    <!-- Dropoff -->
    <ImageView
        android:id="@+id/dropoff_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/bg_dot_red"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickup_address" />

    <TextView
        android:id="@+id/dropoff_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="456 Park Ave, New York"
        android:textColor="@color/gray_300"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/dropoff_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dropoff_dot"
        app:layout_constraintBottom_toBottomOf="@id/dropoff_dot" />

    <!-- Action Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Ride"
        style="@style/Style.App.AuthButton"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dropoff_address" />

</androidx.constraintlayout.widget.ConstraintLayout>