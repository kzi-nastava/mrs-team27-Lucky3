<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.example.mobile.ui.maps.TouchableMapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A2E" />

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_gravity="top">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_box_yellow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸš—"
                android:textSize="18sp" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Lucky Ride"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_account"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/yellow_500"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/legend_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="76dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Vehicles"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_dot_green" />

            <TextView
                android:id="@+id/tv_available_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Available (0)"
                android:textColor="@color/gray_300"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_dot_red" />

            <TextView
                android:id="@+id/tv_occupied_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Occupied (0)"
                android:textColor="@color/gray_300"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_estimate_ride"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Estimate Ride"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingHorizontal="32dp"
        app:backgroundTint="@color/yellow_500"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_search"
        app:iconTint="@color/black"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:elevation="8dp" />

    <!-- Ride Estimation Panel (Initially Gone) -->
    <LinearLayout
        android:id="@+id/estimation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_dark"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Estimation"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_close_estimation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                app:tint="@color/gray_300" />
        </RelativeLayout>

        <!-- Inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F1F1F"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bg_dot_green"
                android:layout_marginEnd="12dp" />

            <EditText
                android:id="@+id/et_pickup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Pickup address"
                android:textColor="@android:color/white"
                android:textColorHint="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F1F1F"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bg_dot_red"
                android:layout_marginEnd="12dp" />

            <EditText
                android:id="@+id/et_destination_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Destination address"
                android:textColor="@android:color/white"
                android:textColorHint="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Results (Initially Gone) -->
        <LinearLayout
            android:id="@+id/ll_estimation_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:visibility="gone"
            android:layout_marginBottom="24dp">

            <!-- Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 km"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_duration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 min"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Price"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 RSD"
                    android:textColor="@color/yellow_500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Initial Estimate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_estimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimate"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/yellow_500"
            app:cornerRadius="8dp" />

        <!-- Action Buttons (Clear / Recalculate) - Initially Gone -->
        <LinearLayout
            android:id="@+id/ll_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                app:backgroundTint="#333333"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_recalculate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recalculate"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="@color/yellow_500"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in or create an account to book this ride"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Â© OpenStreetMap contributors"
        android:textColor="@color/gray_600"
        android:textSize="10sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
