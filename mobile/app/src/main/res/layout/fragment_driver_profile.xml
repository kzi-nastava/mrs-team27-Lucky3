<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">


    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Profile"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/profileHeaderRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card"
                android:layout_marginBottom="16dp"
                >

                <!-- Left: avatar -->
                <ImageView
                    android:id="@+id/ivHeaderAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_badge"
                    android:outlineProvider="background"
                    android:clipToOutline="true" />

                <!-- Right: texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHeaderFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marko Jovanović"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvHeaderEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="marko.jovanovic@example.com"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvHeaderRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.9"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Personal Info Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/personal_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/yellow_500"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/personal_info_title"/>

                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/personal_info_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marko Jovanović"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/label_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="marko.jovanovic@example.com"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_email"
                    app:layout_constraintStart_toStartOf="parent"/>

                 <TextView
                    android:id="@+id/label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_email"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+381641234567"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_phone"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/label_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_phone"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bulevar kralja Aleksandra 73, Beograd"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/vehicle_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Information"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/text_address"
                    app:layout_constraintStart_toStartOf="parent"/>


                <TextView
                    android:id="@+id/label_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vehicle_info_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Škoda Octavia"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_model"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/label_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Plate"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_model"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BG 123-AB"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_plate"
                    app:layout_constraintStart_toStartOf="parent"/>

                 <TextView
                    android:id="@+id/label_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_plate"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_year"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/label_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passenger Seats"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/text_year"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/label_seats"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/label_features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/text_seats"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Baby Transport -->
                <LinearLayout
                    android:id="@+id/layout_baby_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_features"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/icon_baby_transport"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="@color/red_500"/>

                    <TextView
                        android:id="@+id/text_baby_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Transport Unavailable"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Pet Transport -->
                <LinearLayout
                    android:id="@+id/layout_pet_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_baby_transport"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/icon_pet_transport"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="@color/red_500"/>

                    <TextView
                        android:id="@+id/text_pet_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet Transport Unavailable"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>