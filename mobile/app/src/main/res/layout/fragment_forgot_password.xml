<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back to Login Link -->
        <TextView
            android:id="@+id/back_to_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to login"
            android:textColor="@color/gray_400"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/back_to_login_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email and we'll send you a reset link"
            android:textColor="@color/gray_400"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Notice Message Box (for token errors) -->
        <LinearLayout
            android:id="@+id/notice_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_notice_box"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/subtitle_text">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_error"
                app:tint="@color/yellow_500"
                android:contentDescription="Notice icon" />

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/yellow_200"
                android:textSize="14sp"
                tools:text="Reset link has expired. Please request a new link." />
        </LinearLayout>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Email"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/input_box_stroke_color"
            app:boxStrokeErrorColor="@color/red_500"
            app:hintTextColor="@color/yellow_500"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/gray_400"
            app:errorEnabled="true"
            app:errorTextColor="@color/red_500"
            app:layout_constraintTop_toBottomOf="@id/notice_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_400"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error Message Box -->
        <LinearLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_error_box"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/email_input_layout">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_error"
                app:tint="@color/red_500"
                android:contentDescription="Error icon" />

            <TextView
                android:id="@+id/error_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/red_500"
                android:textSize="14sp"
                tools:text="Failed to send reset link" />
        </LinearLayout>

        <!-- Send Reset Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Send Reset Link"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:backgroundTint="@color/yellow_500"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/error_container" />

        <!-- Loading Progress -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminateTint="@color/gray_900"
            app:layout_constraintTop_toTopOf="@id/send_button"
            app:layout_constraintBottom_toBottomOf="@id/send_button"
            app:layout_constraintStart_toStartOf="@id/send_button"
            app:layout_constraintEnd_toEndOf="@id/send_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>