<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_900"
    android:padding="24dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Vehicle Info"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/input_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Model"
        style="@style/Style.App.AuthInput"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <EditText
        android:id="@+id/input_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="License Plate"
        style="@style/Style.App.AuthInput"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/input_model"/>

    <EditText
        android:id="@+id/input_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year"
        android:inputType="number"
        style="@style/Style.App.AuthInput"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/input_plate"/>

    <EditText
        android:id="@+id/input_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color"
        style="@style/Style.App.AuthInput"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/input_year"/>

    <EditText
        android:id="@+id/input_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason for change"
        style="@style/Style.App.AuthInput"
        android:layout_marginTop="12dp"
        android:minLines="3"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/input_color"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Request"
        style="@style/Style.App.AuthButton"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/input_reason"/>

</androidx.constraintlayout.widget.ConstraintLayout>