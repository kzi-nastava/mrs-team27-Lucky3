<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/gray_900">

    <!-- Emergency Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš¨"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMERGENCY PANIC"
            android:textColor="#EF4444"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will immediately alert all administrators that there is a serious issue with this ride."
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The vehicle will be marked on the map for emergency response."
        android:textColor="@color/gray_400"
        android:textSize="13sp"
        android:layout_marginBottom="16dp" />

    <!-- Reason Input (Optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason (optional)"
        android:textColor="@color/gray_300"
        android:textSize="13sp"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/et_panic_reason"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_auth_input"
        android:gravity="top|start"
        android:hint="Describe what happened..."
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_600"
        android:textSize="14sp" />

    <!-- Error Container -->
    <LinearLayout
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_error_box"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_500"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Success Container -->
    <LinearLayout
        android:id="@+id/success_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ…"
            android:textSize="32sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panic Alert Sent!"
            android:textColor="#22C55E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrators have been notified."
            android:textColor="@color/gray_400"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_panic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/gray_700"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_panic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="SEND PANIC"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="#DC2626"
            app:cornerRadius="8dp"
            app:iconPadding="4dp"
            app:iconSize="18dp" />
    </LinearLayout>

</LinearLayout>
