<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.admin.AdminPricingFragment">

    <include
        android:id="@+id/navbar"
        layout="@layout/view_custom_navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Loading -->
            <TextView
                android:id="@+id/tv_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading pricing data..."
                android:textColor="@color/gray_400"
                android:textSize="16sp"
                android:textAlignment="center"
                android:paddingTop="80dp"
                android:visibility="gone" />

            <!-- Error -->
            <LinearLayout
                android:id="@+id/layout_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_error_box"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_500"
                    android:textSize="14sp" />

                <android.widget.Button
                    android:id="@+id/btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Retry"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:background="@drawable/bg_card2"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <!-- Content container -->
            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Heading -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pricing Management"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set base fares and per-kilometer rates for each vehicle type"
                    android:textColor="@color/gray_400"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- STANDARD Card -->
                <LinearLayout
                    android:id="@+id/card_standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:layout_marginBottom="12dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_blue"
                            android:text="ðŸš—"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Standard"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STANDARD"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_standard"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_card2"
                            android:src="@android:drawable/ic_menu_edit"
                            android:scaleType="centerInside"
                            android:contentDescription="Edit Standard pricing"
                            android:padding="8dp"
                            android:tint="@color/gray_400" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_800" />

                    <!-- Pricing Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Base Fare"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_standard_base_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Per Kilometer"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_standard_per_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_800"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Example: 5 km ride"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_standard_estimate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/blue_500"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- LUXURY Card -->
                <LinearLayout
                    android:id="@+id/card_luxury"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:layout_marginBottom="12dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_yellow"
                            android:text="âœ¨"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luxury"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LUXURY"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_luxury"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_card2"
                            android:src="@android:drawable/ic_menu_edit"
                            android:scaleType="centerInside"
                            android:contentDescription="Edit Luxury pricing"
                            android:padding="8dp"
                            android:tint="@color/gray_400" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_800" />

                    <!-- Pricing Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Base Fare"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_luxury_base_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Per Kilometer"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_luxury_per_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_800"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Example: 5 km ride"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_luxury_estimate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/yellow_400"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- VAN Card -->
                <LinearLayout
                    android:id="@+id/card_van"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:layout_marginBottom="12dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_green"
                            android:text="ðŸš"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Van"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VAN"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_van"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_card2"
                            android:src="@android:drawable/ic_menu_edit"
                            android:scaleType="centerInside"
                            android:contentDescription="Edit Van pricing"
                            android:padding="8dp"
                            android:tint="@color/gray_400" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_800" />

                    <!-- Pricing Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Base Fare"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_van_base_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Per Kilometer"
                                android:textColor="@color/gray_400"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_van_per_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_800"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Example: 5 km ride"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_van_estimate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 RSD"
                                android:textColor="@color/green_500"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Info Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_info_box"
                    android:padding="14dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â„¹  Pricing Formula"
                        android:textColor="@color/blue_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Cost = Base Fare + (Distance in km Ã— Per Kilometer Rate)"
                        android:textColor="@color/gray_400"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Changes apply immediately to new rides. In-progress rides continue using the rate from when they started."
                        android:textColor="@color/gray_500"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

