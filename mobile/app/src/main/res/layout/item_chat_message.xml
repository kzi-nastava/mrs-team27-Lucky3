<?xml version="1.0" encoding="utf-8"?>
<!-- Chat message bubble layout — used by ChatMessageAdapter.
     User messages: yellow bubble, right-aligned.
     Admin messages: gray bubble, left-aligned.
     Visibility toggling is done in the adapter. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Admin (support) message — left-aligned -->
    <LinearLayout
        android:id="@+id/admin_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:maxWidth="280dp"
        android:orientation="vertical"
        android:background="@drawable/bg_chat_bubble_admin"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_admin_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_500"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tv_admin_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_admin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_400"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="start" />
    </LinearLayout>

    <!-- User message — right-aligned -->
    <LinearLayout
        android:id="@+id/user_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:maxWidth="280dp"
        android:orientation="vertical"
        android:background="@drawable/bg_chat_bubble_user"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#66000000"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end" />
    </LinearLayout>

</FrameLayout>
