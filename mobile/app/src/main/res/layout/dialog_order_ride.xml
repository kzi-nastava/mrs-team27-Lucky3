<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Ride"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_error"
                app:tint="@color/gray_400"
                android:contentDescription="Close" />
        </LinearLayout>

        <!-- Pickup Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_auth_input"
            android:padding="14dp"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_dot_green" />

            <EditText
                android:id="@+id/et_pickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="Pickup address"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_400"
                android:textSize="14sp"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <!-- Connection Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:layout_marginStart="19dp"
            android:background="@color/gray_700" />

        <!-- Intermediate Stops Container -->
        <LinearLayout
            android:id="@+id/stops_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Add Stop Button -->
        <LinearLayout
            android:id="@+id/btn_add_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_dashed_border"
            android:padding="14dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_add_photo"
                app:tint="@color/gray_400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Add Stop"
                android:textColor="@color/gray_400"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Connection Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:layout_marginStart="19dp"
            android:background="@color/gray_700" />

        <!-- Destination Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_auth_input"
            android:padding="14dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_map_pin"
                app:tint="@color/red_500" />

            <EditText
                android:id="@+id/et_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="Destination address"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_400"
                android:textSize="14sp"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <!-- Vehicle Type Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Type"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rg_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Standard Option -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card2"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rb_standard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/yellow_500" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standard"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Affordable rides for everyday use"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$3.00"
                        android:textColor="@color/yellow_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Luxury Option -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card2"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rb_luxury"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/yellow_500" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luxury"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium vehicles for special occasions"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$8.00"
                        android:textColor="@color/yellow_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Van Option -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card2"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/rb_van"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/yellow_500" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Van"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Extra comfort for larger groups"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5.00"
                        android:textColor="@color/yellow_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RadioGroup>

            <!-- Vehicle Type Error -->
            <TextView
                android:id="@+id/tv_vehicle_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:text="Please select a vehicle type" />
        </LinearLayout>

        <!-- Additional Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Options"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/cb_pet_transport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet Transport"
                android:textColor="@color/gray_300"
                android:buttonTint="@color/yellow_500"
                android:paddingVertical="8dp" />

            <CheckBox
                android:id="@+id/cb_baby_transport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baby Transport"
                android:textColor="@color/gray_300"
                android:buttonTint="@color/yellow_500"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- Error Container -->
        <LinearLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_error_box"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_error"
                app:tint="@color/red_500" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/red_500"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textColor="@color/gray_300"
                android:textAllCaps="false"
                app:backgroundTint="@color/gray_800"
                app:cornerRadius="12dp"
                app:strokeColor="@color/gray_700"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_order"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Order"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="@color/yellow_500"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
