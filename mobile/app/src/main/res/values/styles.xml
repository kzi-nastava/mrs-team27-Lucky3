<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="TextAppearance.App.Label" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="TextAppearance.App.Value" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.AuthLabel" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Components -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/gray_900</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/gray_800</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Style.App.CardContainer">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="Style.App.AuthInput">
        <item name="android:background">@drawable/bg_auth_input</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Style.App.AuthButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_auth_btn</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">14dp</item>
    </style>
    
    <style name="Style.App.Badge">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>

</resources>